@{
    Layout = null;
}
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Thi kết thúc học phần</h1>
            <button class="btn btn-outline-secondary">Tải xuống tất cả</button>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="d-flex align-items-center mb-3">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="checkAll">
                    <label class="form-check-label" for="checkAll">
                        Tất cả (7)
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label text-success" for="check1">
                        Đã nộp (1)
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="check2">
                    <label class="form-check-label text-warning" for="check2">
                        Thiếu (1)
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="check3">
                    <label class="form-check-label text-info" for="check3">
                        Đang chờ xử lý (1)
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="check4">
                    <label class="form-check-label text-danger" for="check4">
                        Đã nộp muộn (4)
                    </label>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên sinh viên</th>
                                <th scope="col">Giờ nộp</th>
                                <th scope="col">Địa chỉ IP</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Số file đính kèm</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Châu Anh Kiệt</td>
                                <td>12:30 PM</td>
                                <td>192.168.1.1</td>
                                <td class="text-success">Đã nộp</td>
                                <td>2</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>