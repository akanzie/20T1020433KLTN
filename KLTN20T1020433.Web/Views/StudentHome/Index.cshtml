@model KLTN20T1020433.Web.Models.TestPagination
@{
    Layout = "~/Views/Shared/Student/_Layout.cshtml";
}
<div class="container-fluid" style="padding-bottom: 10px">
    <!--  Row 1 -->
    <div class="d-sm-none d-inline">
        <select class="form-select">
            <option value="1">Học kỳ: 2, năm học: 2023-2024</option>
            <option value="2">Học kỳ: 2, năm học: 2023-2024</option>
            <option value="3">Học kỳ: 2, năm học: 2023-2024</option>
            <option value="4">Học kỳ: 2, năm học: 2023-2024</option>
        </select>
    </div>
    <div class="d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Kì thi/ Bài kiểm tra sắp tới</h5>                
                <div id="test_pagination">

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {        

            doSearch(@Model.Page);
        });
        function doSearch(page) {
            var url = "Pagination";
            var postData = [];
            postData.push({ "name": "page", "value": page }, { "name": "pageSize", "value": 10 }, { "name": "studentId", "value": '20T1020433' });
            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $("#test_pagination").html(data);
                }
            });

            return;
        }
    </script>
}
