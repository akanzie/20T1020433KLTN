@model KLTN20T1020433.Web.Models.SubmissionModel
@{
    Layout = null;
}
<div class="card mb-4" style="box-shadow: 0 1px 2px 0 rgba(60,64,67,.3),0 2px 6px 2px rgba(60,64,67,.15) ">
    <div class="card-header" style="background-color: white;  padding: 10px 20px;">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-text">Bài nộp của bạn</h4>
            <p class="card-text text-dark">@Model.Submission.StatusDescription</p>
        </div>
    </div>
    <div class="card-body" style="padding-top: 0%;">
        <!-- Hiển thị file bài nộp của sinh viên -->
        <div class="mb-3">
            @foreach(var item in Model.Files){
                <div class="file-container">
                    <a href="#" class="file-link form-control border mb-3" data-file="bainop1.jpg">
                        <img src="../assets/images/logos/favicon.png" width="50px" alt="Demo Image" class="mx-1">
                        @item.FileName
                    </a>
                    <button class="remove-button">Remove</button>
                </div>
            }         
           
            <form action="" class="form-group">
                <input type="file" class="form-control mt-4" id="fileUpload" name="" multiple>
                <button class="btn btn-primary mt-4 form-control" type="submit">Gửi lại</button>
            </form>
        </div>
    </div>
</div>
<div class="card" style="box-shadow: 0 1px 2px 0 rgba(60,64,67,.3),0 2px 6px 2px rgba(60,64,67,.15) ">
    <div class="bg-white py-3 ms-4">
        <div class="d-flex align-items-center">
            <span><i class="ti ti-user me-2"></i></span>
            <span class="card-title mb-0">1 nhận xét riêng tư</span>
        </div>
    </div>
    <div class="mb-3 ms-4">
        <div class="container">
            <div class="row align-items-center">
                @foreach (var item in Model.Comments)
                {
                    <div class="col">
                        <div class="d-flex justify-content-between">
                            <p class="mb-0  "><strong>@item.TeacherName</strong></p>
                            <p class="mb-0 text-muted">@item.CommentedTime</p>
                        </div>
                        <p class="mb-0  fw-bold text-dark">@item.Body</p>
                    </div>
                }
                
            </div>
        </div>
    </div>

</div>
