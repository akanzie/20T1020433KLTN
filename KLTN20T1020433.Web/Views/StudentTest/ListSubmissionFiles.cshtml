@model IEnumerable<KLTN20T1020433.DomainModels.Entities.SubmissionFile>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <div class="d-block mb-2">
        <div class="px-2 border rounded-2 d-flex align-items-center justify-content-between">
            <a href="DownLoadSubmissionFile" class="d-flex flex-grow-1 overflow-hidden d-flex align-items-center" data-file="bainop1.jpg">
                <div style="overflow: hidden; height: 3.5rem; width:3.5rem" class="flex-shrink-0 position-relative">
                    <img src="../assets/images/logos/favicon.png" width="50px" class="mx-1" style="width: 100%; height: auto;">
                </div>
                <div style="overflow: hidden">
                    <span class="d-inline-block text-truncate" style="width: 130px;">@item.OriginalName</span>
                </div>
            </a>
            <div style="width:48px; height: 48px" class="d-flex align-items-center justify-content-center user-select-none border-0 rounded-circle cursor-pointer d-inline-block flex-shrink-0 overflow-hidden position-relative text-center">
                <button class="remove-button" type="button" data-fileid="@item.FileId">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"></path>
                    </svg>
                </button>

            </div>
        </div>
    </div>

}
