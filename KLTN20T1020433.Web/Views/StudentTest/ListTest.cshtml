﻿@model KLTN20T1020433.Web.Models.TestSearchInput
@{
    ViewData["Title"] = "ListExam";
    Layout = "~/Views/Shared/Student/_Layout.cshtml";
}
<div class="container-fluid">
    <form class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex">
            <select class="form-select filter-select me-2" style="width: 200px;">
                <option value="">Tất cả</option>
                <option value="ket-thuc-hoc-phan">Chưa bắt đầu</option>
                <option value="kiem-tra-giua-ky">Đang diễn ra</option>
                <option value="ki-thi">Đã qua</option>
            </select>
            <select class="form-select filter-select me-2" style="width: 200px;">
                <option value="">Thi/Bài kiểm tra</option>
                <option value="ket-thuc-hoc-phan">Thi kết thúc học phần</option>
                <option value="kiem-tra-giua-ky">Bài kiểm tra</option>
            </select>
        </div>
        <div class="d-flex">
            <label for="fromDate" class="input-group-text">Từ ngày:</label>
            <input id="fromDate" type="date" class="form-control me-2" style="width: 150px;">
            <label for="toDate" class="input-group-text">Đến ngày:</label>
            <input id="toDate" type="date" class="form-control me-2" style="width: 150px;">


            <button class="btn btn-outline-primary" type="submit">
                Lọc
            </button>
        </div>
        
    </form>
    <div id="searchResult">

    </div>
    
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });

            doSearch("#formSearch", @Model.Page);
        });

        function doSearch(formSearchInput, page) {
            var url = $(formSearchInput).prop("action");
            var container = $(formSearchInput).data("container");
            var postData = $(formSearchInput).serializeArray();
            postData.push(
                { "name": "page", "value": page },
                { "name": "categoryId", "value": $('#cate').val() },
                { "name": "supplierId", "value": $('#sup').val() }
            );
            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $(container).html(data);
                }
            });

            return;
        }
    </script>
}
