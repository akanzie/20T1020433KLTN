@model KLTN20T1020433.Web.Models.TestPagination
@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="padding-bottom: 10px">
    <!--  Row 1 -->
    <div class="d-sm-none d-flex">
        <label for="semester">Học kỳ:</label>
        <select class="form-select" id="semester">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>            
        </select>
        <label for="academic_year">Năm học:</label>
        <select class="form-select" id="academic_year">
            <option value="2021-2022">2021-2022</option>
            <option value="2022-2023">2022-2023</option>
            <option value="2023-2024">2023-2024</option>
            <option value="2024-2025">2024-2025</option>
        </select>
    </div>
    <div class="d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Kì thi/ Bài kiểm tra sắp tới</h5>
                <div id="test_pagination">
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            doSearch(@Model.Page);
        });
        function doSearch(page) {
            var url = '@Url.Action("Pagination", "Home")';
            var postData = [];
            postData.push({ "name": "page", "value": page }, { "name": "pageSize", "value": 10 }, { "name": "studentId", "value": '20T1020433' });
            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function (xhr, status, error) {
                    handleAjaxError(xhr);
                },
                success: function (data) {
                    $("#test_pagination").html(data);
                }
            });

            return;
        }
    </script>
}
