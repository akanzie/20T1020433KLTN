@model KLTN20T1020433.Web.Models.TestSearchResult
@{
    Layout = null;
}
<div class="row">
    <div class="col">
        <ul class="list-unstyled">
            @foreach (var item in Model.Data)
            {
                <li class="card mb-3">
                    <a href="~/Student/Test/Detail/@item.TestId" class="card-link p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">@item.Title</h5>
                                <p class="mb-0">@item.TeacherName</p>
                            </div>

                            <p class="mb-0 text-muted">
                                @if (@item.EndTime != null)
                                {
                                    <b>Đến hạn @item.EndTime</b>
                                }
                                else
                                {
                                    <b>Không có ngày đến hạn.</b>
                                }
                            </p>


                        </div>
                    </a>
                </li>
            }
        </ul>
        @if (Model.PageCount > 1)
        {
            <div class="text-center">
                <ul class="pagination">

                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (Model.Page == p)
                        {
                            <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="javascript:;" onclick="doSearch(@p)">@p</a>

                            </li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>