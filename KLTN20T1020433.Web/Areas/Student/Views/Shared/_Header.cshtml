@using KLTN20T1020433.Application.Queries.StudentQueries
@using KLTN20T1020433.Web.AppCodes
<header class="app-header p-0 border-bottom">
    <nav class="navbar navbar-expand-lg navbar-light bg-light ps-2 justify-content-between">
        <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
                <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)" style="height: 35px">
                    <i class="ti ti-menu-2"></i>
                </a>
            </li>
            <li class="nav-item d-none d-lg-block border rounded-1" style="width: 25rem">
                <form class="d-flex" method="post" action="@Url.Action("Index","Test")">
                    @{
                        GetTestsBySearchQuery? input = ApplicationContext.GetSessionData<GetTestsBySearchQuery>(Constants.TEST_SEARCH);
                        string searchValue = "";
                        if (input != null)
                        {
                            searchValue = input.SearchValue;
                        }
                    }
                    <input class="form-control border-0 rounded-0" type="search" placeholder="Kỳ thi" aria-label="Search" id="searchValue" name="SearchValue" value="@searchValue">
                    <button class="btn btn-primary border-0" type="submit"><span><i class="ti ti-search"></i></span></button>
                </form>
            </li>
        </ul>
        <div class="navbar-nav justify-content-end px-0" id="navbarNav" style="flex-basis: content">
            <ul class="navbar-nav d-flex align-items-center">
               
                @{
                    var userData = User.GetUserData();
                    if (userData != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <span class="d-inline fw-semibold">@userData.DisplayName</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                <div class="message-body">
                                    <a href="~/Account/Logout" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                </div>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>
</header>
