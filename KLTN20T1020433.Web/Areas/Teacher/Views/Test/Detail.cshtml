@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding-top: 70px; padding-left: 0%; padding-right: 0%;">
    <nav>
        <div class="overflow-auto">
            <div class="nav nav-tabs d-flex" id="navTab" role="tablist" style="white-space: nowrap; flex-wrap: nowrap">
                <button class="nav-link active" id="nav-detail-tab" data-bs-toggle="tab" data-bs-target="#nav-detail"
                        type="button" role="tab" aria-controls="nav-detail" aria-selected="true" style="white-space: nowrap;">
                    <span class="d-inline-block">
                        Thông tin
                    </span>
                </button>
                <button class="nav-link" id="submissionList" data-bs-toggle="tab" data-bs-target="#nav-submission"
                        type="button" role="tab" aria-controls="nav-submission" aria-selected="false" style="white-space: nowrap;">
                    <span class="d-inline-block">Danh sách bài làm</span>
                </button>
            </div>
        </div>
    </nav>
    <div class="tab-content" id="navTabContent">
        <div class="tab-pane fade show active" id="nav-detail" role="tabpanel" aria-labelledby="nav-detail-tab">
            <div class="row" style="justify-content: center">
                <div class="col-lg-10">
                    <div class="card" style="-webkit-box-shadow:none; box-shadow:none">
                        <div class="card-header" style="border-bottom: 1px solid teal; background-color:white; padding-bottom:0px">
                            <div class="d-flex justify-content-between align-items-center">

                                <h1 class="fw-bold text-primary">Thi kết thúc học phần</h1>
                                <div class="dropdown">
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                        <!-- Biểu tượng ba chấm (ellipsis) -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-dots-vertical"
                                             width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                            <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                            <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                        </svg>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" href="#">Chỉnh sửa</a></li>
                                        <li><a class="dropdown-item" href="#">Xóa</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <p class="text-dark mb-0 me-2">Nguyễn Văn A</p>
                                <span class="text-muted">-</span>
                                <p class="text-dark mb-0 mx-2">Hôm qua</p>
                                <p class="text-muted mb-0">(Đã chỉnh sửa 14:42)</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <p class="fw-bold text-dark">10 điểm</p>
                                <p class="fw-bold text-dark">Đến hạn 9g30 Hôm qua</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p>Hướng dẫn</p>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-lg-10 col-sm-6 mb-3">
                                            <div class="p-2" style="border-radius: 10px; border: 1px solid #02080f33;">
                                                <a href="#" class="file-link text-dark d-block" data-file="deso1.jpg">
                                                    <img src="../assets/images/logos/favicon.png" alt="Demo Image" width="60px" class="mx-2">
                                                    deso1.jpg
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-lg-10 col-sm-6 mb-3">
                                            <div class="p-2" style="border-radius: 10px; border: 1px solid #02080f33;">
                                                <a href="#" class="file-link text-dark d-block" data-file="deso2.jpg">
                                                    <img src="../assets/images/logos/favicon.png" alt="Demo Image" width="60px" class="mx-2">
                                                    deso2.jpg
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-lg-10 col-sm-6 mb-3">
                                            <div class="p-2" style="border-radius: 10px; border: 1px solid #02080f33;">
                                                <a href="#" class="file-link text-dark d-block" data-file="deso3.jpg">
                                                    <img src="../assets/images/logos/favicon.png" alt="Demo Image" width="60px" class="mx-2">
                                                    deso3.jpg
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="nav-submission" role="tabpanel" aria-labelledby="submissionList">
        <div id="submissionContent">
        </div>
    </div>
</div>
@section scripts
{
    <script>
        function initialize() {
            bindEvents();
        }
        function bindEvents() {
            $("#submissionList").on('click', function () {
                getListSubmissions();
            });
        }
        function getListSubmissions() {
            var url = '@Url.Action("ListSubmissions", "Test")';
            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    e.preventDefault();
                    $('#submissionContent').html(data);
                },
                error: function (xhr, status, error) {
                    // Xử lý lỗi nếu có
                    console.error(xhr.responseText);
                }
            });
        }
        $(document).ready(function () {
            initialize();
        });
    </script>
}
