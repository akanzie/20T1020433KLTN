@model KLTN20T1020433.Web.Areas.Teacher.Models.FileViewModel
@{
    Layout = null;
}


<div class="overflow-y-auto mw-100" style="height: calc(100vh - 255px);">
    <div class="d-flex align-items-center justify-content-between my-2">
        <h3><span class="text-muted">@Model.FileName</span></h3>
        <a href="@Url.Action("DownloadFile", "Test", new { id = Model.FileId, testId = Model.TestId , isTestFile = false })" class="btn btn-primary"><i class="bi bi-download"></i></a>
    </div>
    @if (Model.IsImage)
    {
        <div class="d-flex h-100 align-items-center justify-content-center">
            <img src="@Url.Action("DownloadFile", "Test", new { id = Model.FileId, testId = Model.TestId , isTestFile = false})" alt="Image" />
        </div>
    }
    else if (Model.IsText)
    {
        <div>
            @Html.Raw(Model.Content)
        </div>
    }    
</div>

